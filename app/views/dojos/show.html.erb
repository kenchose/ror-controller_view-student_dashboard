<h1>This is <%= @dojo.branch %></h1>
<% if flash[:success] %>
    <p><%= flash[:success] %></p>
<% end %>
<h2 style="text-align: center;">Student Roster</h2>
<table style="border: black solid; width:100%;">
    <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th>Action</th> 
    </tr>
    <% @students.each do |student| %>
        <tr>
            <td> <%= student.first_name %> </td>
            <td> <%= student.last_name %> </td>
            <td> <%= student.email %> </td>
            <td><a href="/dojos/<%= @dojo.id %>/students/<%= student.id %>">Show</a></td>
            <td><a href="/dojos/<%= @dojo.id %>/students/<%= student.id %>/edit">Edit</a></td>
            <td><a href="/dojos/<%= @dojo.id %>/students/<%= student.id %>" data-method="delete">Destroy</a></td>
        </tr>
    <% end %>
</table>
<a href="/dojos">Go Home</a> | <a href="/dojos/<%=@dojo.id%>/students/new">Add Student</a>